@using Sopheon.Domain.Responses;
@using Sopheon.Domain.Entities;
@model List<Project>

@if (Model.Count > 0)
{

	foreach (var item in Model)
	{
	<div class="tile project-tile p5 bb_dotted">
		<div class="w30 left">
			@item.Name
		</div>
		<div class="w30 right">
			<a href="javascript:void(0)" class="sangre-inject sangre-effect" 
				id="gatesPanelLink@(item.Id)"
				data-target="#gatesPanel@(item.Id)" 
				data-url="/MyProjects/GatesByProject?projectId=@item.Id"
				data-effect-target="#gatesPanel@(item.Id) #gatesPanelLink@(item.Id) #gatesLinkHide@(item.Id)"
				data-effect-action="show hide show"
			>Gates</a> 
			<a href="javascript:void(0)" class="hide sangre-effect" 
				id="gatesLinkHide@(item.Id)"
				data-effect-target="#gatesLinkHide@(item.Id) #gatesPanel@(item.Id) #gatesPanelLink@(item.Id)"
				data-effect-action="hide slideUp show">Hide Gates</a>
		</div>
		<div class="clear"></div>
	</div>
	<div class="" id="gatesPanel@(item.Id)">
	
	</div>
	}
}
else
{
	<h2>No projects</h2>
}
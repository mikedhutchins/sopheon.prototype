<!DOCTYPE html>
<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>@ViewBag.Title</title>
	@RenderSection("styles", false)
	@RenderSection("headerScripts", false)
	@Styles.Render("~/Content/base/css")
	@Styles.Render("~/Content/bootstrap")
</head>
<body>
	<div id="main" class="">
		@RenderBody()
	</div>
	<div class="ta-left" id="SystemTemplates">
		<!-- Section for templates to be used for system behaviors -->
		@{ Html.RenderPartial("~/Views/Shared/Templates.cshtml"); }
		@if (IsSectionDefined("templates")) { RenderSection("templates"); }
	</div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.0/jquery.min.js"></script>
	@Scripts.Render("~/bundles/jquery", "~/bundles/jqueryui", "~/bundles/bootstrap", "~/bundles/jqueryval", "~/bundles/sangre", "~/bundles/sopheon")
	@RenderSection("scripts", false)
</body>
</html>
